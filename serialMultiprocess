
class ser:
    def __init__ (self, port, baudrate):
        self.ard = serial.Serial(port, baudrate)
    def sersend(self):
        ard = self.ard
        count = 0
        while True:
            count = 0
            ardtry = 1
            data = input('data')
            ard.write(data)
            while count == 0:
                ardtry += 1
                time.sleep(0.1)
                print ('try%d' %ardtry)
                msg = ard.read(ard.inWaiting()) [:-2]
                count = len(msg)
                print (msg)
